<div id="localization" class="pt-5">
  <div class="row">

  <div class="col-12 col-lg-4">
    <div class="form-group">
      <%= form.label :locale, class: "h4" %><br>
      <%= form.collection_select :locale,
                                 Locale.all,
                                 :abbreviation,
                                 :display_name,
                                 {},
                                 class: "custom-select custom-select-lg" %>

      <p class="form-text text-muted">
        If it’s not here, you can
        <%= link_to "create a new locale. →", [:new, :admin, :locale], target: "_blank" %>
      </p>
    </div>
  </div><!-- .col -->

  <div class="col-12 col-lg-8">
    <div class="form-group">
      <%= form.label "English #{current_item_class}", class: "h4" %><br>

      <%= form.collection_select :canonical_id,
                                 current_item_class.english,
                                 :id,
                                 :id_and_name,
                                 { include_blank: true },
                                 class: "custom-select custom-select-lg" %>
    </div>
  </div><!-- .col -->

  </div><!-- .row -->
  <%= render "admin/articles/back_to_top" %>
</div><!-- #localization -->
