<div id="categorization" class="row pt-5">
  <div class="col-12 col-sm-6">
    <% unless @collection.present? %>

      <fieldset id="categories">
        <label class="h4">Categories</label>

        <div class="form-check">
          <% @categories.in_groups_of(2).each do |group| %>

            <div class="row">
              <% group.each do |category| %>
                <div class="col-6">
                  <% if category.present? %>

                    <%= form.check_box :category_ids,
                                    {
                                      id: "article_category_ids_#{category.id}",
                                      name: "article[category_ids][]",
                                      class: "form-check-input"
                                    },
                                    category.id,
                                    nil %>

                    <%= form.label "category_ids_#{category.id}", class: "form-check-label" do %>
                      <b><%= category.name %></b>
                    <% end %>

                  <% end %>
                </div>
              <% end %>
            </div><!-- .row -->

          <% end %>
        </div><!-- .form-group -->
      </fieldset>

    <% end %>
  </div><!-- .col -->

  <div class="col-12 col-sm-6">
    <div class="form-group">
      <%= form.label :tags, "Tags", class: "h4" %>
      <%= text_field_tag :tags, @article.tags.map{ |t| t.name }.join(", "), class: "form-control form-control-lg" %>
      <p class="form-text text-muted">Comma separated. For example, <em>dogs, cats, etc</em>.</p>
    </div>

    <hr class="my-5">

    <% unless @collection.present? %>
      <div class="form-group">
        <%= form.label :short_path, "Short URL Path" %>
        <%= form.text_field :short_path, class: "form-control form-control-lg" %>
      </div>
    <% end %>

    <%= form.label :status_id, "Publication Status" %><br>
    <div class="form-check" id="publication_status">

      <span class="d-inline-block mr-3">
        <%= form.radio_button :status_id, @draft.id, id: :article_status_id_draft, class: "form-check-input" %>

        <%= form.label :status_id_draft, class: "form-check-label" do %>
          <b>Draft</b>
        <% end %>
      </span>

      <span class="d-inline-block ml-3">
        <%= form.radio_button :status_id, @published.id, id: :article_status_id_published, class: "form-check-input" %>

        <%= form.label :status_id_published, class: "form-check-label" do %>
          <b>Published</b>
        <% end %>
      </span>

    </div>
  </div><!-- .col -->

  <%= render "admin/articles/back_to_top" %>
</div><!-- #categorization.row -->
