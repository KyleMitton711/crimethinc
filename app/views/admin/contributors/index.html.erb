<%= render "admin/page_header", thing: @contributors %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Slug</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contributors.each do |contributor| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, contributor], class: "btn btn-primary btn-sm" %>
        </td>
        <td><%= link_to contributor.name, [:admin, contributor] %></td>
        <td><%= link_to contributor.slug, [:admin, contributor] %></td>
        <td>
          <%= link_to "DELETE", [:admin, contributor], method: :delete, data: { confirm: "Are you sure you're sure? There is NO UNDO." }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
