<%= form_for [:admin, @theme] do |f| %>
  <%= render "admin/form_errors", thing: @theme %>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control input-lg" %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <%= f.label :slug %>
        <%= f.text_field :slug, class: "form-control input-lg" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control input-lg", rows: 3 %>
  </div>


  <%= render "admin/form_actions", cancel_url: [:admin, :themes] %>
<% end %>
