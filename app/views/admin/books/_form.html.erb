  </div>

  <div class="field">
    <%= f.label :tweet %>
    <%= f.text_field :tweet %>
  </div>

  <div class="field">
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </div>

  <div class="field">
    <%= f.label :pages %>
    <%= f.text_field :pages %>
  </div>

