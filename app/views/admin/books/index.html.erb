<%= render "admin/page_header", thing: @books %>

<table class="table table-striped table-sm mb-5 table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th></th>
      <th>Name</th>
      <th class="text-center">Read PDF</th>
      <th class="text-center">Print PDF</th>
      <th class="text-center">ePub</th>
      <th class="text-center">Mobi</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, book], class: "btn btn-light border-secondary btn-sm" %>
        </td>
        <td>
          <%= link_to [:admin, book] do %>
            <b><%= book.title %></b><br>
            <%= book.subtitle %>
          <% end %>
        </td>

        <td class="text-center align-middle"><%= "✔️" if book.read_download_present? %> </td>
        <td class="text-center align-middle"><%= "✔️" if book.print_download_present? %></td>
        <td class="text-center align-middle"><%= "✔️" if book.epub_download_present? %> </td>
        <td class="text-center align-middle"><%= "✔️" if book.mobi_download_present? %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
