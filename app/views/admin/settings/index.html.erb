<%= render "admin/page_header", thing: @settings %>

<table class="table table-striped table-sm mb-5">
  <thead class="thead-inverse">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, setting], class: "btn btn-light border-secondary btn-sm" %>
        </td>
        <td><%= setting.name %></td>
        <td><%= setting.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
