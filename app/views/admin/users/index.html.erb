<%= render "admin/page_header", thing: @users %>

<table class="table table-striped table-sm mb-5">
  <thead class="thead-inverse">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, user], class: "btn btn-light border-secondary btn-sm" %>
        </td>
        <td><%= user.name %></td>
        <td><b><%= user.username %></b></td>
        <td><%= mail_to user.email, user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
