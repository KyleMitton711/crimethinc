<%= render "admin/page_header", thing: @links %>

<table class="table table-striped table-sm mb-5">
  <thead class="thead-inverse">
    <tr>
      <th></th>
      <th>Name</th>
      <th>URL</th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, link], class: "btn btn-light border-secondary btn-sm" %>
        </td>
        <td><b><%= link.name %></b></td>
        <td><%= link_to link.url, link.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @links, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
