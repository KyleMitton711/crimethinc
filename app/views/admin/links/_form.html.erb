<%= form_for [:admin, @link] do |f| %>
  <%= render "admin/form_errors", thing: @link %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control form-control-lg" %>
    <p class="help-block">This is the displayed text in the link.</p>
  </div>

  <div class="form-group">
    <%= f.label :url, "URL" %>
    <%= f.url_field :url, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "User" %>
    <%= f.select :user_id, User.options_for_select, { include_blank: true }, class: "form-control form-control-lg" %>

    <p class="help-block">Leave this blank to add a link for the whole site.</p>
  </div>

  <%= render "admin/form_actions", cancel_url: [:admin, :links] %>
<% end %>
