<%= form_with(model: [:admin, @podcast]) do |form| %>
  <%= render "admin/form_errors", thing: @podcast %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control form-control-lg" %>
  </div>


  <div class="row">
    <div class="col-12 col-sm-2">
      <div class="form-group">
        <%= form.label :language, "Language Code" %>
        <%= form.text_field :language, class: "form-control form-control-lg" %>
      </div>
    </div>

    <div class="col-12 col-sm-5">
      <div class="form-group">
        <%= form.label :slug %>
        <%= form.text_field :slug, class: "form-control form-control-lg" %>
      </div>
    </div>

    <div class="col-12 col-sm-5">
      <div class="form-group">
        <%= form.label :episode_prefix %>
        <%= form.text_field :episode_prefix, class: "form-control form-control-lg" %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-12 col-sm-3">
      <div class="form-group">
        <%= form.label :copyright %>
        <%= form.text_field :copyright, class: "form-control form-control-lg" %>
      </div>
    </div>

    <div class="col-12 col-sm-9">
      <div class="form-group">
        <%= form.label :image %>
        <%= form.url_field :image, class: "form-control form-control-lg" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control form-control-lg", rows: 6 %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.text_field :tags, class: "form-control form-control-lg" %>

    <p class="form-text text-muted">
      Comma separated.
    </p>
  </div>


  <hr class="my-5">


  <fieldset>
    <legend>iTunes Information</legend>

    <div class="row">
      <div class="col-12 col-sm-9">
        <div class="form-group">
          <%= form.label :itunes_categories, "iTunes Categories" %>
          <%= form.text_field :itunes_categories, class: "form-control form-control-lg" %>
        </div>
      </div>

      <div class="col-12 col-sm-3">
        <div class="form-group">
          <%= form.label :itunes_explicit, "iTunes Explicit?" %>
          <%= form.check_box :itunes_explicit, class: "form-control form-control-lg" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-sm-6">
        <div class="form-group">
          <%= form.label :itunes_owner_name, "iTunes Owner’s Name" %>
          <%= form.text_field :itunes_owner_name, class: "form-control form-control-lg" %>
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="form-group">
          <%= form.label :itunes_owner_email, "iTunes Owner’s Email" %>
          <%= form.text_field :itunes_owner_email, class: "form-control form-control-lg" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <%= form.label :itunes_url, "iTunes URL" %>
      <%= form.url_field :itunes_url, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group">
      <%= form.label :itunes_summary, "iTunes Summary" %>
      <%= form.text_area :itunes_summary, class: "form-control form-control-lg", rows: 6 %>
    </div>
  </fieldset>

  <%= render "admin/form_actions", cancel_url: [:admin, :podcasts] %>
<% end %>
