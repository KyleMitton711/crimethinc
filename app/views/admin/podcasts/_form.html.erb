<%= form_with(model: [:admin, @podcast]) do |form| %>
  <%= render "admin/form_errors", thing: @podcast %>

  <%= render "admin/label_and_field_form_group", form: form, attr: :title %>
  <%= render "admin/label_and_field_form_group", form: form, attr: :subtitle %>

  <div class="row">
    <div class="col-12 col-sm-2">
      <%= render "admin/label_and_field_form_group", form: form, attr: :language, label_text: "Language Code" %>
    </div>

    <div class="col-12 col-sm-5">
      <%= render "admin/label_and_field_form_group", form: form, attr: :slug %>
    </div>

    <div class="col-12 col-sm-5">
      <%= render "admin/label_and_field_form_group", form: form, attr: :episode_prefix %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-3">
      <%= render "admin/label_and_field_form_group", form: form, attr: :copyright %>
    </div>

    <div class="col-12 col-sm-9">
      <%= render "admin/label_and_field_form_group", form: form, attr: :image %>
    </div>
  </div>

  <%= render "admin/label_and_area_form_group", form: form, attr: :content, rows: 6 %>

  <div class="form-group">
    <%= render "admin/label_and_field_form_group", form: form, attr: :tags %>

    <p class="form-text text-muted">
      Comma separated.
    </p>
  </div>

  <hr class="my-5">

  <fieldset>
    <legend>iTunes Information</legend>

    <div class="row">
      <div class="col-12 col-sm-9">
        <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_categories, label_text: "iTunes Categories" %>
      </div>

      <div class="col-12 col-sm-3">
        <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_explicit, label_text: "iTunes Explicit?" %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-sm-6">
        <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_owner_name, label_text: "iTunes Owner’s Name" %>
      </div>

      <div class="col-12 col-sm-6">
        <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_owner_email, label_text: "iTunes Owner’s Email" %>
      </div>
    </div>

    <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_url, label_text: "iTunes URL" %>
    <%= render "admin/label_and_field_form_group", form: form, attr: :itunes_summary, label_text: "iTunes Summary" %>
  </fieldset>

  <%= render "admin/form_actions", cancel_url: [:admin, :podcasts] %>
<% end %>
