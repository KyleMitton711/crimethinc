<article class="mb-5">
  <header>
    <div class="p-name">
      <h1><%= podcast.title %></h1>
      <h2><%= podcast.subtitle %></h2>
    </div>

    <%= link_to "EDIT", [:edit, :admin, podcast], class: "btn btn-light btn-sm" %>

  </header>

  <dl class="e-content">
    <dt>Slug</dt>
    <dd class="mb-4"><%= podcast.slug %></dd>

    <dt>Language</dt>
    <dd class="mb-4"><%= podcast.language %></dd>

    <dt>Copyright</dt>
    <dd class="mb-4"><%= podcast.copyright %></dd>

    <dt>Image</dt>
    <dd class="mb-4"><%= image_tag podcast.image, width: 100 %></dd>

    <dt>Content</dt>
    <dd class="mb-4"><%= podcast.content %></dd>

    <dt>iTunes author</dt>
    <dd class="mb-4"><%= podcast.itunes_author %></dd>

    <dt>iTunes categories</dt>
    <dd class="mb-4"><%= podcast.itunes_categories.html_safe %></dd>

    <dt>iTunes Owner email</dt>
    <dd class="mb-4"><%= mail_to podcast.itunes_owner_email %></dd>

    <dt>iTunes explicit</dt>
    <dd class="mb-4"><%= podcast.itunes_explicit %></dd>

    <dt>Tags</dt>
    <dd class="mb-4"><%= podcast.tags.gsub(",", ", ") %></dd>

    <dt>iTunes Owner name</dt>
    <dd class="mb-4"><%= podcast.itunes_owner_name %></dd>

    <dt>iTunes summary</dt>
    <dd class="mb-4"><%= podcast.itunes_summary %></dd>

    <dt>iTunes URL</dt>
    <dd class="mb-4"><%= link_to podcast.itunes_url, podcast.itunes_url %></dd>
  </dl>
</article>
