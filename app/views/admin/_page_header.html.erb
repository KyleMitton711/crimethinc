<h1>
  <%= link_to_unless_current thing_type(thing).pluralize, [:admin, thing_type(thing).pluralize.downcase] %>
</h1>

<p>
  <% if listing? %>
    <%= link_to "NEW", [:new, :admin, thing_type(thing).downcase], class: "btn btn-primary btn-xs action-new" %>
  <% elsif showing? %>
    <%= link_to "EDIT", [:edit, :admin, thing], class: "btn btn-primary btn-xs action-edit" %>
  <% end %>
</p>

<% if editing? %>
  <h2>
    Editing
    <%= link_to [:admin, thing] do %>
      <%= thing_type(thing) %> &mdash;
      <%= thing.name %>
    <% end %>
  </h2>
<% end %>

<% if creating? %>
  <h2>
    New
    <%= thing_type(thing) %>
  </h2>
<% end %>
