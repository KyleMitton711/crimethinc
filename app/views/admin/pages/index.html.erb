<%= render "admin/page_header", thing: @pages %>

<table class="table table-striped table-sm">
  <thead class="thead-inverse">
    <tr>
      <th></th>
      <th>Status</th>
      <th>Title / Subtitle</th>
      <th>Published Date</th>
      <th>Path</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, page], class: "btn btn-light border-secondary btn-sm" %>
        </td>

        <td><%= render "/admin/articles/publication_status", article: page %></td>

        <td>
          <b><%= link_to page.title, [:admin, page] %></b><br>

          <% if page.subtitle.present? %>
            <%= link_to page.subtitle, [:admin, page] %>
          <% end %>
        </td>

        <td>
          <%= display_date page.published_at %><br>
          <%= display_time page.published_at %>
        </td>

        <td>
          <%= link_to page.path, page.path %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
