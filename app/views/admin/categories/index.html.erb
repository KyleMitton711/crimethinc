<%= render "admin/page_header", thing: @categories %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Slug</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, category], class: "btn btn-primary btn-sm" %>
        </td>
        <td><%= link_to category.name, [:admin, category] %></td>
        <td><%= category.slug %></td>
        <td>
          <%= link_to "DELETE", [:admin, category], method: :delete, data: { confirm: "Are you sure you're sure? There is NO UNDO." }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @categories, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
