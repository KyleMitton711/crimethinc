<%= render "admin/page_header", thing: @posters %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Front Download</th>
      <th>Back Download</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posters.each do |poster| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, poster], class: "btn btn-primary btn-sm" %>
        </td>
        <td>
          <b class="h3"><%= link_to poster.title, [:admin, poster] %></b>
          <br>
          <%= poster.subtitle %>
        </td>

        <td> <%= "✔️" if poster.front_download_present? %> </td>
        <td> <%= "✔️" if poster.back_download_present? %> </td>

        <td>
          <%= link_to "DELETE", [:admin, poster], method: :delete, data: { confirm: "Are you sure you're sure? There is NO UNDO." }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posters, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
