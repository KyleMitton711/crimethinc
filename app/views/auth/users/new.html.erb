<div class="mt-5">
  <h2>Sign Up</h2>
</div>

<%= form_with [:auth, @user], local: true do |form| %>
  <%= render "admin/form_errors", thing: @user %>

  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control form-control-lg" %>
    <p class="form-text text-muted">Passwords must be <b>at least 30 characters</b> long.</p>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control form-control-lg" %>
    <p class="form-text text-muted">
      Pro Tip: Use a password manager like
      <a href="https://1password.com">1Password</a>,
      and/or try a passphrase like <code>mickey fickie fire cracker soap on a rope</code>
      for length plus memorability.
    </p>
  </div>

  <%= render "admin/form_actions", cancel_url: root_url, button_text: "Sign Up" %>
<% end %>
