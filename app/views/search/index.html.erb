<% content_for(:head) do %>
  <%= rel_next_prev_link_tags(@results) %>
<% end %>

<div class="h-feed">

  <header>
    <h1>Search results for "<%= @search.query %>"</h1>
  </header>

  <div class="articles-list">
    <ol>
      <% @results.each do |result| %>
        <% unless result.blank? %>
          <%= render "result", result: result %>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>

<%= paginate @results %>
