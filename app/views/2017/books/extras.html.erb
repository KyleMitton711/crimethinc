<div class="h-entry">
  <header>
    <nav class="crumbtrail">
      <%= link_to "Books", [:books] %> :
      <%= link_to @book.title, book_path(@book.slug) %>
    </nav>

    <div class="p-name">
      <h1 class="p-x-title">
        <%= @book.title %> :
        Extras
      </h1>
    </div>
  </header>

  <div class="row e-content">
    <div class="column column-two-third main">
      <%= render_themed "books/#{@book.slug}/main", book: @book %>
    </div>

    <div class="column column-one-third aside">
      <%= render_themed "books/#{@book.slug}/aside", book: @book %>
    </div>
  </div>
</div>
