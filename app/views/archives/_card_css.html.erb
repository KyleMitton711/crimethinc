<% content_for :style_tag do %>

  <% if article.header_background_color.present? %>
    #home .h-entry#article-<%= article.id %> {
      /* Set header background color */
      background: <%= article.header_background_color %>;
    }
  <% end %>

  <% if article.header_text_color.present? %>
    #home .h-entry#article-<%= article.id %> a {
      /* Set header text color */
      color: <%= article.header_text_color %>;
    }
  <% end %>

<% end %>
