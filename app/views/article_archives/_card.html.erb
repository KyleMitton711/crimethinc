<% cache [:story_card, article] do %>
  <% unless article.blank? %>
    <%= content_tag :article,
                    class: 'h-entry',
                    id:    "article-#{article.id}",
                    style: story_card_background_image(article: article) do %>
      <%= render "articles/header",     article: article %>
      <%= render "articles/categories", article: article %>
    <% end %>
  <% end %>
<% end %>
