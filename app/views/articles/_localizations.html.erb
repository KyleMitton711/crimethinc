<% if localizations_for(article).present? %>
  <div class="localizations">
    <b class="badge">Localizations:</b>

    <% if action_name == 'show' %>
      <%= image_tag 'library/localizations.png', class: 'icon-image' %>
    <% end %>

    <ul>
      <% localizations_for(article).each do |article| %>
        <li><%= link_to locale(article.locale).name, article.path %></li>
      <% end %>
    </ul>
  </div>
<% end %>
