<% if @pinned_article.present? %>
  <div class="pinned">
    <article>
      <h1>
        <%= link_to @pinned_article.path do %>
          <span class="title"><%= @pinned_article.title %></span><br>
          <span class="subtitle"><%= @pinned_article.subtitle %></span>
        <% end %>
      </h1>

      <div class="e-content">
        <%= simple_format @pinned_article.content %>
      </div>
    </article>
  </div>
<% end %>

<ol>
  <% @articles.reverse.each do |article| %>
    <li>
      <article>
        <h1>
          <%= link_to article.path, class: "p-name" do %>
            <span class="p-x-title"><%= article.title %></span><br>
            <span class="p-x-subtitle"><%= article.subtitle %></span>
          <% end %>
        </h1>

        <div class="e-content">
          <%= simple_format article.content %>
        </div>

        <footer>
          <%= render "/articles/published_on", article: article %>

          <% if article.categories.present? %>
            <p>
              <b>Categories:</b>
              <ul>
                <% article.categories.each do |category| %>
                  <li><%= link_to category.name, category.slug, rel: "tag", class: "p-category" %></li>
                <% end %>
              </ul>
            </p>
          <% end %>

          <% if article.tags.present? %>
            <p>
              <b>Tags:</b>
              <ul>
                <% article.tags.each do |tag| %>
                  <li><%= link_to tag.name, tag.slug, rel: "tag", class: "p-category" %></li>
                <% end %>
              </ul>
            </p>
          <% end %>
        </footer>
      </article>
    </li>
  <% end %>
</ol>