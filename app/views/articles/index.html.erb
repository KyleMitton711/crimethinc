<ol>
  <% @articles.each do |article| %>
    <li>
      <article>
        <h1>
          <%= link_to article.path do %>
            <span class="title"><%= article.title %></span><br>
            <span class="subtitle"><%= article.subtitle %></span>
          <% end %>
        </h1>

        <div>
          <%= simple_format article.content %>
        </div>

        <footer>
          <time>
            <%= link_to_if article.dated?, article.path do %>
              Published on <%= display_date article.published_at %>
            <% end %>
          </time>
        </footer>
      </article>
    </li>
  <% end %>
</ol>