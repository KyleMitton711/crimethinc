<article>
  <h1>
    <%= link_to @article.path, class: "p-name" do %>
      <span class="title"><%= @article.title %></span><br>
      <span class="subtitle"><%= @article.subtitle %></span>
    <% end %>
  </h1>

  <div>
    <%= simple_format @article.content %>
  </div>

  <footer>
    <time>
      <%= link_to @article.path do %>
        Published on <%= @article.published_at.strftime("%Y-%m-%d") %>
      <% end %>
    </time>

    <% if @article.tags.present? %>
      <p>
        <b>Tags:</b>
        <ul>
          <% @article.tags.each do |tag| %>
            <li><%= link_to tag.name, tag.slug %></li>
          <% end %>
        </ul>
      </p>
    <% end %>
  </footer>
</article>
