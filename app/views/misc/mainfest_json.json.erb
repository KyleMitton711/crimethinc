{
  "lang": "en",
  "short_name": "<%= t(:site_name) %>",
  "name": "<%= t(:site_name) %>",

  "icons": [
    <% %w(57 60 72 76 114 120 144 150 152 180 200 300 500 600).each do |size| %>
      {
        "src": "<%= setting "icon_#{size}x#{size}" %>",
        "sizes": "<%= size %>x<%= size %>",
        "type": "image/png"
      }<%= "," unless size == "600" %>
      <%# 600 is the last in the list of sizes, so should not get a comma after the hash %>
    <% end %>
  ],

  "start_url": "/",
  "display": "minimal-ui",
  "background_color": "#ffffff",
  "theme_color": "#ffffff"
}
