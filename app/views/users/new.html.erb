<div class="page-header">
  <h1>Sign Up</h1>
</div>

<%= form_for @user do |f| %>
  <%= render "admin/form_errors", thing: @user %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
  </div>
<% end %>
