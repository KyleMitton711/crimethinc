<!-- CSS -->
<%= stylesheet_link_tag "application", media: "all" unless lite_mode? %>

<% if @article.present? && @article.css.present? %>
  <!-- Custom Article CSS -->
  <style>
    <%= @article.css %>
  </style>
<% end %>

<% if @page.present? && @page.css.present? %>
  <!-- Custom Page CSS -->
  <style>
    <%= @page.css %>
  </style>
<% end %>

<!-- Page specific CSS -->
<style>
  <%= yield :style_tag %>
</style>

<%= stylesheet_link_tag "lite_mode", media: "all" if lite_mode? %>
