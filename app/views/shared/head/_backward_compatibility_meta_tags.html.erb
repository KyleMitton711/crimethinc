<!-- Backward compatibility: Twitter Cards and Facebook (Open Graph) -->
<meta name="twitter:card"                                  content="summary" />
<meta name="twitter:site"                                  content="<%= twitter_username %>" />
<meta name="twitter:site:id"                               content="<%= twitter_user_id %>" />
<meta name="twitter:creator"                               content="<%= twitter_username %>" />
<meta name="twitter:creator:id"                            content="<%= twitter_user_id %>" />
<meta name="twitter:url"         property="og:url"         content="<%#= TODO canonical_url @post %>" />
<meta name="twitter:title"       property="og:title"       content="<%= page_title %>" />
<meta name="twitter:description" property="og:description" content="<%#= TODO page_description %>" />
<meta name="twitter:image"       property="og:image"       content="<%#= TODO %>" />
<meta property="og:site_name"                              content="<%= t(:site_name) %>">
<meta property="og:type"                                   content="<%= og_type %>">
