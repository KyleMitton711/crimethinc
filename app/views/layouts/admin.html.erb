<!DOCTYPE html>
<%= tag.html dir:    html_dir,
             lang:   html_lang,
             id:     html_id,
             class:  html_class,
             prefix: html_prefix do %>
  <head>
    <title><%= page_title %></title>
    <%= render "shared/head/meta_tags" %>
    <%= render "shared/head/fav_and_touch_icons" %>

    <%= stylesheet_link_tag    "admin", media: "all" %>
    <%= javascript_include_tag "admin" %>
  </head>

  <body id="<%= body_id %>">
    <%= render "shared/development_mode_banner" %>
    <%= render "admin/nav" %>

    <div class="container">
      <main>
        <%= render "shared/alerts" %>

        <%= yield %>
      </main>

      <% if signed_in? %>
        <footer class="my-5 text-center" style="padding-top: 10rem">
          <hr class="my-5">

          <% if current_user.can_admin_users? %>
            <%= link_to "Users", [:admin, :users], class: "text-muted mr-3" %>
          <% end %>

          <%= link_to "Settings", [:settings],      class: "text-muted mr-3" %>
          <%= link_to "Sign out", [:signout],       class: "text-muted" %>
        </footer>
      <% end %>
    </div>
  </body>
<% end %>
