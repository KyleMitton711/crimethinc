<!DOCTYPE html>
<html dir="ltr" lang="<%= lang %>" prefix="og: http://ogp.me/ns#" id="<%= @slug %>">

<head>
  <%= render "shared/bootstrap_head" %>
  <%= stylesheet_link_tag    "admin", media: "all" %>
  <%= javascript_include_tag "admin" %>
</head>

<body>
  <%= render "admin/nav" %>

  <div class="container">
    <% if signed_in? %>
      <header>
        <div class="page-header">
          <h1><%= setting :site_name %></h1>
        </div>
      </header>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </div>
</body>
</html>
